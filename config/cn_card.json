{
  "Contact01_AdaptiveBranch": {
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0",
    "type": "AdaptiveCard",
    "body": [
      {
        "type": "TextBlock",
        "text": "Tender&VO 业务客服联系人",
        "weight": "bolder",
        "size": "large",
        "color":"Accent"

      },
      {
        "type": "TextBlock",
        "text": "${branch} 分公司工程师:",
        "weight": "bolder",
        "isSubtle": false,
        "spacing":"Large"
      },
      {
        "type": "TextBlock",
        "text": "${engineer}",
        "separator": true
      },
      {
        "type": "TextBlock",
        "text": "${engineerPhone}",
        "spacing": "none"
      },
      {
        "type": "TextBlock",
        "text": "${engineerMail}",
        "spacing": "none"
      },
      {
        "type": "TextBlock",
        "text": "备选工程师：",
        "weight": "bolder",
        "isSubtle": false,
        "spacing":"Medium"
      },
      {
        "type": "TextBlock",
        "text": "${backup}",
        "separator": true
      },
      {
        "type": "TextBlock",
        "text": "${backupPhone}",
        "spacing": "none"
      },
      {
        "type": "TextBlock",
        "text": "${backupMail}",
        "spacing": "none"
      },
      {
        "type": "TextBlock",
        "text": "数据库最近一次更新日期：${lastrefreshdate} ${lastrefreshtime}",
        "separator": true,
        "size":"small",
        "spacing":"Medium"
      }
    ]
  },
